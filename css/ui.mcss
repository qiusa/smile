//a标签状态样式
.u-a{
    font-size: 16px;
    color: #666;
    text-decoration: none;
}
.u-a:hover{
    text-decoration: underline;
}
.u-a:active{
    color: #444;
    text-decoration: underline;
}
.u-a-disabled{
    color: #ccc;
}
.u-a-disabled:hover, .u-a-disabled:active{
    color: #ccc;
    text-decoration: none;
}
