//下拉按钮
//摄像机操作
.operation-list{
    float: right;
    height: 30px;
    li{
        background: #f7f7f7;
        border: 1px solid #dcdcdc;
        border-radius: 3px;
        font-size: 12px;
        color: #666;
        height: 28px;
        line-height: 28px;
        position: relative;
        z-index: 9;
        padding: 0 28px 0 14px;
        float: left;
        cursor: pointer;
        
    }
    li:hover{
        background: #ebebeb;
        border-color: #ccc;
        z-index: 11;
    }
    .light{
        border: 1px solid #0d945e;
        background: #12a76b;
        color: #fff;
        .icon-more-white{
            background: url(../res/images/icon_more_white.png) no-repeat;
            background-size: contain;
        }
    }
    .light:hover{
        border: 1px solid #0a8956;
        background: #0f9961;
    }
    .first{
        border-radius: 3px 0 0 3px;
        margin-right: -1px;
    }
    .second{
        border-radius: 0;
    }

    .third{
        border-radius: 0 3px 3px 0;
        margin-left: -1px;
    }
    .border{
        margin-left: -1px;
        border-radius: 0;
    }
    .icon-more{
        display: inline-block;
        background: url(../res/images/icon_more.png) no-repeat;
        background-size: contain;
        width: 8px;
        height: 8px;
        position: absolute;
        top: 11px;
        right: 12px;
    }
    .detail-list{
        display: none;
        position: absolute;
        right: 0;
        top: 28px;
        border: 1px solid #dcdcdc;
        width: 122px;
        line-height: 40px;
        text-align: center;
        box-shadow: 0 6px 4px 0 rgba(0, 0, 0, 0.1);
        color: #666;
        li{
            height: 40px;
            line-height: 40px;
            background: #fff;
            padding: 0;
            float: none;
            border: 0;
            border-radius: 0;
            position: relative;
            .select-icon{
                background: url(../res/images/icon_drop_select.png) no-repeat;
                width: 10px;
                height: 10px;
                position: absolute;
                left: 14px;
                top: 15px;
                display: none;
            }
        }
        li:hover, .cur{
            background: #eee;
            .select-icon{
                display: inline-block;
            }
        }
        .hr{
            height: 1px;
            width: 100%;
            background: #f0f0f0;
            overflow: hidden;
            position: absolute;
            bottom: 0;
            left: 0;
            border: 0;
        }
    }
    .detail-list-wd{
        width: 118px;
    }
    .live{
        background: #ebebeb;
        border: 1px solid #ccc;
        color: #4c4c4c;
        z-index: 11;
        .detail-list{
            display: block;
        }
    }
    .light.live{
        border: 1px solid #0d945e;
        background: #12a76b;
        color: #fff;
    }
}
//输入框错误
.icon-x{
    background: url(../res/images/X.png) no-repeat;
    width: 14px;
    height: 14px;
    position: absolute;
    right: 10px;
    top: 12px;
    display: inline-block;
    cursor: pointer;
}
.x-pos{
    left: 137px;
}
.icon-right{
    background: url(../res/images/checkbox_b_on.png) no-repeat;
    width: 18px;
    height: 18px;
    display: inline-block;
    vertical-align: middle;
    margin-left: 5px;
}
.register-icon{
    display: none;
    width: 18px;
    height: 18px;
    vertical-align: middle;
    margin: 11px 0 0 5px;
    float: left;  
}
.icon-fail{
    background: url(../res/images/icon_enter_fail.png) no-repeat;
}
.icon-caveat{
    background: url(../res/images/icon_enter_caveat.png) no-repeat;
    display: inline-block;
}
.icon-true{
    background: url(../res/images/icon_enter_true.png) no-repeat;
    display: inline-block;
}
.fail-text{
    padding-left: 5px;
    height: 40px;
    line-height: 40px;
}
/* 错误校验样式 */
.u-error-tip{
    display: none;
}
.u-error-pos{
    display: none;
}
.u-verify-error{
    position: relative;
    .u-error-pos{
        display: block;
        position: absolute;
        top: 0;
        left: 290px;
    }
    .u-error-tip{
        display: block;
        color: #d76360;
        white-space: nowrap;
        .register-icon{
            display: inline-block!important;  
        }   
    }
    input{
        border: 1px solid #d76369!important;
        background: #fbefef!important;
    }
}
.u-pointer{
    cursor: pointer;
}
.u-error-type{
    padding-top: 16px;
    .error-icon{
        background: url(../res/images/icon_enter_fail.png) left center no-repeat;
        height: 18px;
        line-height: 18px;
        padding-left: 26px;
        font-size: 12px;
        color: #d76360;
        text-align: left;
    }
}